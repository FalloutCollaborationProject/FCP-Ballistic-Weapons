    <!-- Power Armor Assault Rifle -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Gun_Power_Armor_Assault_Rifle</defName>
        <label>Power Armor Assault Rifle</label>
        <description>The Assault Rifle is a pre-war, fully automatic rifle chambered for 5.56mm rounds. Its distinctive drum magazine and robust construction make it a favorite for sustained fire in the wasteland, though it is heavy and unwieldy compared to more modern designs requiring the use of power armor.</description>
        <graphicData>
            <texPath>Weapons/Assault_Rifles/FCP_FO4_Assault_Rifle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <researchPrerequisites>
                <li>FCP_Research_Gunsmithing</li>
            </researchPrerequisites>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Simple_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>48000</WorkToMake>
            <Mass>6.2</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.68</AccuracyShort>
            <AccuracyMedium>0.70</AccuracyMedium>
            <AccuracyLong>0.55</AccuracyLong>
            <RangedWeapon_Cooldown>1.7</RangedWeapon_Cooldown>
        </statBases>
        <weaponTags>
            <li>FCP_FO4_Assault_Rifle</li>
            <li>FCP_Power_Armor_Required</li>
        </weaponTags>
        <costList>
            <Steel>85</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
