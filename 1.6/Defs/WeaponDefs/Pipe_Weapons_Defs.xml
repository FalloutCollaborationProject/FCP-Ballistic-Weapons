    <!--_____ Pipe Weapons _____-->

    <!-- Pipe Pistol -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Gun_Pipe_Pistol</defName>
        <label>Pipe Pistol</label>
        <description>A crude, homemade pistol cobbled together from scavenged pipes and scrap metal. While unreliable and lacking in stopping power, it is easy to craft and maintain, making it a common sidearm among the most desperate wastelanders.</description>
        <graphicData>
            <texPath>Weapons/Pipe_Weapons/FCP_Pipe_Pistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Autopistol</soundInteract>
        <recipeMaker>
            <researchPrerequisites>
                <li>FCP_Research_Makeshift_Weapons</li>
            </researchPrerequisites>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Simple_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>4000</WorkToMake>
            <Mass>1.0</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.45</AccuracyShort>
            <AccuracyMedium>0.22</AccuracyMedium>
            <AccuracyLong>0.08</AccuracyLong>
            <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
        </statBases>
        <weaponTags>
            <li>FCP_Pipe_Weapons</li>
        </weaponTags>
        <costList>
            <Steel>8</Steel>
            <WoodLog>4</WoodLog>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_32mm</defaultProjectile>
                <warmupTime>0.5</warmupTime>
                <range>16</range>
                <burstShotCount>1</burstShotCount>
                <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
                <soundCast>FCP_Sound_Shot_32_Pistol</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>2</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>2</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>2</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Common</rarity>
            </li>
        </comps>
    </ThingDef>

