    <!-- 10mm Pistol -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Gun_10mm_Pistol</defName>
        <label>10mm Pistol</label>
        <description>The 10mm Pistol is a semi-automatic sidearm chambered for 10mm rounds. Favored for its reliability and stopping power, it is a common sight among wastelanders and pre-war security forces alike.</description>
        <graphicData>
            <texPath>Weapons/Pistols/FCP_10mm_Pistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Autopistol</soundInteract>
        <recipeMaker>
            <researchPrerequisites>
                <li>FCP_Research_Gunsmithing</li>
            </researchPrerequisites>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Simple_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.85</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.45</AccuracyMedium>
            <AccuracyLong>0.18</AccuracyLong>
            <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
        </statBases>
        <weaponTags>
            <li>FCP_10mm_Pistol</li>
            <li>FCP_Pistol</li>
        </weaponTags>
        <costList>
            <Steel>28</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_10mm</defaultProjectile>
