            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>4.0</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.95</AccuracyMedium>
            <AccuracyLong>0.98</AccuracyLong>
            <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
        </statBases>
        <smeltable>false</smeltable>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_308mm</defaultProjectile>
                <warmupTime>1.5</warmupTime>
                <range>40</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>FCP_Sound_Shot_DKS_501_Sniper_Rifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>8</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Unique</rarity>
            </li>
        </comps>
        <modExtensions>
            <li Class="FCP.Core.UniqueThingExtension"></li>
        </modExtensions>
    </ThingDef>

    <!-- Medicine Stick -->

    <ThingDef ParentName="BaseGun">
