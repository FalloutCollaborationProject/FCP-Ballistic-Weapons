        </graphicData>
        <statBases>
            <Mass>3.8</Mass>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.80</AccuracyShort>
            <AccuracyMedium>0.90</AccuracyMedium>
            <AccuracyLong>0.95</AccuracyLong>
            <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
