    <!-- Bozar -->

    <ThingDef ParentName="BaseGun">
        <defName>FCP_Gun_Bozar</defName>
        <label>Bozar</label>
        <description>A unique automatic marksman rifle chambered in .308. Combining the accuracy of a sniper rifle with the fire rate of a machine gun, it is a rare and devastating weapon.</description>
        <graphicData>
            <texPath>Weapons/Unique/FCP_Bozar</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <Mass>7.5</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.90</AccuracyMedium>
            <AccuracyLong>0.85</AccuracyLong>
            <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
        </statBases>
        <smeltable>false</smeltable>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_308mm</defaultProjectile>
                <warmupTime>0.7</warmupTime>
                <range>36</range>
                <burstShotCount>6</burstShotCount>
                <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
                <soundCast>FCP_Sound_Shot_DKS_501_Sniper_Rifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>7</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Unique</rarity>
            </li>
        </comps>
        <modExtensions>
            <li Class="FCP.Core.UniqueThingExtension"></li>
        </modExtensions>
    </ThingDef>

