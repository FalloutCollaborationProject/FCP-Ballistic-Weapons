    <!-- Lucky -->

    <ThingDef ParentName="BaseGun">
        <defName>FCP_Gun_Lucky</defName>
        <label>Lucky</label>
        <description>A pristine .357 Magnum revolver with intricate engravings. Its action is smooth and it is renowned for its accuracy and speed.</description>
        <graphicData>
            <texPath>Weapons/Unique/FCP_Lucky</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>1.0</Mass>
            <AccuracyTouch>0.75</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.80</AccuracyMedium>
            <AccuracyLong>0.65</AccuracyLong>
            <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
        </statBases>
        <smeltable>false</smeltable>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_357mm</defaultProjectile>
                <warmupTime>0.5</warmupTime>
                <range>22</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>FCP_Sound_Shot_357_Revolver</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>5</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Unique</rarity>
            </li>
        </comps>
        <modExtensions>
            <li Class="FCP.Core.UniqueThingExtension"></li>
        </modExtensions>
    </ThingDef>

    <!-- Maria -->

    <ThingDef ParentName="BaseGun">
        <defName>FCP_Gun_Maria</defName>
        <label>Maria</label>
        <description>A beautifully engraved 9mm pistol, once belonging to a notorious figure. It is both elegant and deadly.</description>
        <graphicData>
            <texPath>Weapons/Unique/FCP_Maria</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>0.9</Mass>
            <AccuracyTouch>0.80</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.80</AccuracyMedium>
            <AccuracyLong>0.60</AccuracyLong>
            <RangedWeapon_Cooldown>0.7</RangedWeapon_Cooldown>
        </statBases>
        <smeltable>false</smeltable>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_9mm</defaultProjectile>
                <warmupTime>0.4</warmupTime>
                <range>20</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>FCP_Sound_Shot_9mm_Pistol</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>4</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Unique</rarity>
            </li>
        </comps>
        <modExtensions>
            <li Class="FCP.Core.UniqueThingExtension"></li>
        </modExtensions>
    </ThingDef>

    <!-- Gobi Campaign Scout Rifle -->

    <ThingDef ParentName="BaseGun">
        <defName>FCP_Gun_GobiCampaignScoutRifle</defName>
