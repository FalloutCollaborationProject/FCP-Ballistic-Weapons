    <!-- Caravan Shotgun -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Gun_Caravan_Shotgun</defName>
        <label>Caravan Shotgun</label>
        <description>A double-barreled, break-action shotgun popular with caravan guards and traders. Its simple design makes it easy to repair and maintain, but it suffers from a slow reload and limited range</description>
        <graphicData>
            <texPath>Weapons/Shotguns/FCP_Caravan_Shotgun</texPath>
